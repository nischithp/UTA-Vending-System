<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".VehicleInventoryScreen">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/headingCol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="Vehicle Inventory"
                android:textSize="24dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:horizontalSpacing="10dp"
                android:layout_weight="1"/>

        </TableRow>

        <TableRow
            android:id="@+id/row1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView

                android:id="@+id/r1c1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="Item"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:horizontalSpacing="10dp"/>
            <TextView

                android:id="@+id/r1c2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="Qty"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:horizontalSpacing="10dp"/>

            <TextView

                android:id="@+id/r1c3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="10dp"
                android:padding="18dip"
                android:text="Price"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                />

        </TableRow>

        <TableRow
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView

                android:id="@+id/r2c1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="Sandwiches"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:horizontalSpacing="10dp"/>
            <TextView

                android:id="@+id/swichAvl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="25"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:horizontalSpacing="10dp"/>
            <TextView

                android:id="@+id/switchQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="$5.75"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:horizontalSpacing="10dp"/>
        </TableRow>

        <TableRow
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView

                android:id="@+id/r3c1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="Drinks"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:horizontalSpacing="10dp"/>
            <TextView

                android:id="@+id/drinksAvl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="32"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:horizontalSpacing="10dp"/>
            <TextView

                android:id="@+id/drinksQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="$1.5"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:horizontalSpacing="10dp"/>
        </TableRow>

        <TableRow
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView

                android:id="@+id/r4c1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="Snacks"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:horizontalSpacing="10dp"/>
            <TextView

                android:id="@+id/snacksAvl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="54"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:horizontalSpacing="10dp"/>
            <TextView

                android:id="@+id/snacksQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="18dip"
                android:text="$1.25"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:horizontalSpacing="10dp"/>
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>